source "~/.mutt/jt"
folder-hook $folder 'source ~/.mutt/jt'

source "~/.mutt/ai"
folder-hook ~/.mail/ai/* 'source ~/.mutt/ai'

source "~/.mutt/personal"
folder-hook ~/.mail/personal/* 'source ~/.mutt/personal'

